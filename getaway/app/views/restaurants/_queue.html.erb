
<div class="pure-u-1">
	<div class="restaurant-content-header">
		Queue
	</div>

	<div class="next-button">
			<button id="next" value = "<%=@restaurant.temps.first.user_id call%>"> NEXT </button>

		</div>
	</div>
<div class="restaurant-queue-content">
	<table>
	  <thead>
	    <tr>
	      <th>Ticket</th>
	      <th>Name</th>
	      <th>Orders</th>
	    
	    </tr>
	  </thead>

	  <tbody>
	  	<% @restaurant.visits.each do |visit| %>
	  	<tr>
	    <td>#000</td>
	    <td><%=visit.user.name%></td>
	   <td class="orders"> <a href="javascript:void(0)"><%= image_tag "glass.png", :class => 'glass', :id =>'glass' %></a></td>
		</tr>
		<% end %>
	  </tbody>
</table>
</div>

